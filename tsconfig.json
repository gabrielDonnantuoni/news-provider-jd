{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "types": [
      "node",
      "mocha"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "server/**/*.test.ts"
  ]
}
